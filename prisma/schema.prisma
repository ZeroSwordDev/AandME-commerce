generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id     String  @id @default(uuid()) @map("_id")
  name   String
  desc   String
  price  Int
  image  String
  amount String?

  sizeId String[]
  Size   Size[]   @relation(fields: [sizeId], references: [id])

  uptimeid String[]
  Uptime   Uptime[] @relation(fields: [uptimeid], references: [id])

  optionsId String[]
  Option    Option[] @relation(fields: [optionsId], references: [id])
}

model Size {
  id        String    @id @default(uuid()) @map("_id")
  amount    String
  size      Int       @default(0)
  Product   Product[] @relation(fields: [productId], references: [id])
  productId String[]
}

model Uptime {
  id        String    @id @default(uuid()) @map("_id")
  name      String
  agg       Int       @default(0)
  products  Product[] @relation(fields: [productId], references: [id])
  productId String[]
}

model Option {
  id         String    @id @default(uuid()) @map("_id")
  name       String    @unique
  values     Json[]
  productsId String[] 
  Product    Product[] @relation(fields: [productsId], references: [id])
}
